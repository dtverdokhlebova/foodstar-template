                      path(d='M2 15H4' stroke='currentcolor' stroke-width='4' stroke-linecap='round' stroke-linejoin='round')
                      path(d='M2 26H4' stroke='currentcolor' stroke-width='4' stroke-linecap='round' stroke-linejoin='round')

              .product-view-main
                .product-head
                  .product-head__item Фото
                  .product-head__item Наименование
                  .product-head__item стоимость
                  .product-head__item купить
                +product-grid('--column')
                  -for(item = 0; item < 6; item++)
                    +product-item('new', '--column')
                +pagination
