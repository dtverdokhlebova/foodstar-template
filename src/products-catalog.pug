extends layouts/layout

block variables
  -
    const pageTitle ='Каталог товаров'

  -
    const productFilterUl =[
      { text: 'Кондитерские изделия' },
      { text: 'Кулинария' },
      { text: 'Какао-напитки' },
      { text: 'Готовые завтраки и&nbsp;злаковые ботончики' },
      { text: 'Каши' },
      { text: 'Детское питание' },
      { text: 'Лечебное и лечебно-профилактическое питание' },
      { text: 'Минеральная вода' },
      { text: 'Корма для животных' },
      { text: 'Молочная продукция' },
      { text: 'Соки' },
      { text: 'Алкогольная продукция' },
    ]

block content
  main.main
    +breadcrumbs
      +breadcrumbs-item('Главная', 'main.html')
      +breadcrumbs-item('Каталог', '#')
      +breadcrumbs-item('NESCAFE')
    .page-content
      +section
        .inner
          +section-head
            +ui-h2('Продукция NESCAFE', '--bold')
          .product-catalog
            .product-filter
              .product-filter__head
                .product-filter__btn
                  .product-filter__btn-tablet Закрыть
                  .product-filter__btn-mobile Назад
              .product-filter__main
                .product-filter__section
                  .product-filter__title Категории
                  ul.product-filter__ul
                    li.product-filter__li.active
                      a(href='#') Кофе
                    each item in productFilterUl
                      li.product-filter__li
                        a(href='#') !{item.text}
                .product-filter__section
                  .product-filter__title Сегмент
                  +ui-select('--size-s', 'Весь сегмент', 'сегмент 1', 'сегмент 2')(data-placeholder='Сегмент')
                .product-filter__section
                  .product-filter__title Бренд
                  .product-filter__checks
                    +ui-checkbox('filterCheckbox1', 'NESCAFE GOLD', 'product-filter')
                    +ui-checkbox('filterCheckbox1', 'NESCAFE GOLD', 'product-filter')
                .product-filter__section
                  .product-filter__title Цена
                  +ui-range('main-choice')#filterRange(data-min='10' data-max='1000000' data-start-top='20' data-start-bot='850000')
              .product-catalog__foot
                .product-catalog__close
                  +ui-button('Закрыть')
                .product-catalog__submit
                  +ui-button('Применить')

            .product-catalog__main
              .product-catalog__actions
                .product-open-filter
                  button.product-open-filter__button Фильтр
                +ui-select('product-catalog', 'Цена по возрастанию', 'Цена по убыванию', 'По умолчанию')(data-placeholder='Тип сортировки')

                .product-view-nav
                  button.product-view-nav__item.active(data-type='column')
                    svg(width='30' height='30' viewbox='0 0 30 30' fill='none' xmlns='http://www.w3.org/2000/svg')
                      g(clip-path='url(#clip0_112_4417)')
