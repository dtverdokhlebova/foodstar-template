block variables
include ../blocks/mixins

doctype html
html(lang='ru')
  block head
    head
      meta(charset='utf-8')
      title=pageTitle
      meta(content='width=device-width, initial-scale=1, user-scalable=no' name='viewport')
      meta(content='ie=edge' http-equiv='x-ua-compatible')
      link(href='.' rel='icon' type='image/x-icon')
      link(rel='stylesheet', href='libs/fancybox/fancybox.css')
      link(rel='stylesheet', href='libs/noUiSlider/nouislider.min.css')
      link(rel='stylesheet', href='libs/select2/select2.min.css')
      link(rel='stylesheet', href='libs/flatpickr/flatpickr.min.css')
      link(rel='stylesheet', href='libs/swiper/swiper-bundle.css')
      link(rel='stylesheet' href='styles/style.css')
      script(src='https://api-maps.yandex.ru/2.1/?apikey=7742add4-5d3c-4060-9f01-67963d12fb4e&lang=ru_RU' type='text/javascript')
  body
    if siteType === 'lk'
      .wrapper.wrapper--lk
        include ../blocks/navbar/navbar
        .page-content
          block header
            include ../blocks/header/header
          main.main-lk(class=mainMods)
            block content
          block footer
            include ../blocks/footer/footer
    else
      .wrapper
        block header
          include ../blocks/header/header
        block content
        block footer
          include ../blocks/footer/footer
    block scripts
      script(src='libs/jquery/jquery-3.6.0.min.js')
      script(src='libs/fancybox/fancybox.js')
      script(src='libs/parsley/parsley.min.js')
      script(src='libs/inputmask/inputmask.min.js')
      script(src='libs/flatpickr/flatpickr.js')
      script(src='libs/flatpickr/rangePlugin.js')
      script(src='libs/flatpickr/ru.js')
      script(src='libs/nouislider/nouislider.min.js')
      script(src='libs/wnumb/wNumb.min.js')
      script(src='libs/select2/select2.min.js')
      script(src='libs/swiper/swiper-bundle.js')
      script(src='libs/tippy/popper.min.js')
      script(src='libs/tippy/tippy-bundle.umd.js')

      script(src='js/index.js')
