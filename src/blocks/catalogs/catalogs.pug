mixin catalogs(type, mods)
  -
    const baseName = 'catalogs'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .catalogs(class=allMods)&attributes(attributes)
    -for(item = 0; item < 6; item++)
      .catalogs__item
        .catalogs__icon
          img(src='img/icon_pdf.svg', alt='')
        .catalogs__name(class = (type === 'lk' ? 'catalogs__name--lk' : '' ))
          if item === 2
            | Обновленный каталог компании Nestle. Текст для заполнения
          else
            | Обновленный каталог
        // -- for backend
        // на основном сайте тоже нужно добавить catalogs__foot
        .catalogs__foot
          if type === 'lk'
            +ui-button('Скачать', 'catalogs, --px-xxxs, --fz-s')(href='#')
            +ui-button('Смотреть', 'catalogs, --px-xxxs, --fz-s, --empty').catalogs__m-none(href='#')
          else
            +ui-button('Скачать', 'catalogs')(href='#')
    block
