mixin details(detailsItems, mods)
  -
    const baseName = 'details'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .details(class=allMods)&attributes(attributes)
    each item in detailsItems
      .details__item
        .details__name !{item.name}
        .details__value(class = (item.valueBreakWord ? 'ui-break-word' : '')) !{item.value}
    block
